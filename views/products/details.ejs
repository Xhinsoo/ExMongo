<%- include('../partials/nav.ejs') %>



<div class="card">
  <div class="card-header">
    <h2>
      <%=product.name%>
     <h4>
       Id: <%=product._id %>
     </h4>
    </h3>
  </div>
  <div class="card-body" style="display: flex; flex-direction: column;align-items: center;">
    <p class="card-text" ><ul>
      <li>Price: $<%=product.price %></li>
      <li>
        Category:
        <a href="/products?category=<%=product.category%>"> <%= product.category %></a>
      </li>
    </ul></p>
    <div>

      <a href="http://localhost:3000/products/<%=product._id %>/edit" class="btn btn-primary">Edit</a>
      <a href="http://localhost:3000/products" class="btn btn-primary">Index</a>
      <form style="display: inline;"
      action="http://localhost:3000/products/<%=product._id %>?_method=DELETE"
      method="POST"
      >
      <button class="btn btn-primary">Delete</button>
      </form>
    </div>
  </div>
</div>



